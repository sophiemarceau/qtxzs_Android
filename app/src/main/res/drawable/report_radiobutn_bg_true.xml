<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景  gradient是渐变,corners定义的是圆角 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white"/>
            <stroke
                android:width="2px"
                android:color="@color/wecoo_theme_color"/>
            <size
                android:width="18dp"
                android:height="18dp"/>
        </shape>
    </item>
    <item
        android:bottom="@dimen/margin_4dp"
        android:left="@dimen/margin_4dp"
        android:right="@dimen/margin_4dp"
        android:top="@dimen/margin_4dp">
        <shape android:shape="oval">
            <solid android:color="@color/wecoo_theme_color"/>
            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>
</layer-list>
