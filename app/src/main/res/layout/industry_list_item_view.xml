<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_15dp">

        <ImageView
            android:id="@+id/industry_listItem_view_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_industry_all" />

        <TextView
            android:id="@+id/industry_listItem_view_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="全部行业"
            android:textColor="@color/wecoo_gray6"
            android:textSize="@dimen/size_13sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/industry_listItem_view_ivHot"
        android:layout_width="33dp"
        android:layout_height="17dp"
        android:layout_gravity="right"
        android:src="@mipmap/icon_classification_hot"/>
</FrameLayout>
