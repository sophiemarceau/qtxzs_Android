<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_10dp"
    android:paddingRight="@dimen/padding_10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/followUp_Record_view_top"
            android:layout_width="@dimen/view_1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/wecoo_gray3" />

        <ImageView
            android:id="@+id/followUp_Record_img_status"
            android:layout_width="@dimen/view_15dp"
            android:layout_height="@dimen/view_15dp"
            android:src="@mipmap/icon_timeaxis_red" />

        <TextView
            android:id="@+id/followUp_Record_view_buttom"
            android:layout_width="@dimen/view_1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/wecoo_gray3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_6dp"
        android:background="@drawable/icon_timeaxis"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/followUp_Record_txt_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/wecoo_gray5"
            android:textSize="@dimen/size_15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:id="@+id/followUp_Record_text_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/wecoo_gray4"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/followUp_Record_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/wecoo_gray4"
                android:textSize="@dimen/size_12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>