<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wecoo_gray1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_10dp"
    android:paddingRight="@dimen/padding_10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reportprogress_view_top"
            android:layout_width="@dimen/view_1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/wecoo_gray3" />

        <ImageView
            android:id="@+id/reportprogress_img_status"
            android:layout_width="@dimen/view_15dp"
            android:layout_height="@dimen/view_15dp"
            android:src="@mipmap/icon_timeaxis_red" />

        <TextView
            android:id="@+id/reportprogress_view_buttom"
            android:layout_width="@dimen/view_1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/wecoo_gray3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_6dp"
        android:background="@drawable/icon_timeaxis"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rProgress_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/wecoo_gray5"
                android:text="" />
            <TextView
                android:id="@+id/rProgress_text_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/actionsheet_blue"
                android:text="@string/update_apply_info"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/reportprogress_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_15sp"
            android:textColor="@color/wecoo_theme_color"
            android:text="" />

        <TextView
            android:id="@+id/reportprogress_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_12sp"
            android:textColor="@color/wecoo_gray4"
            android:layout_marginTop="@dimen/margin_1dp"
            android:maxLines="1"
            android:text="" />
    </LinearLayout>
</LinearLayout>