<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_130dp"
        android:background="@color/wecoo_theme_color"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_15dp"
            android:background="@drawable/photo_circular_bg">

            <ImageView
                android:id="@+id/user_image_Photo"
                android:layout_width="@dimen/view_60dp"
                android:layout_height="@dimen/view_60dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_photo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myheader_txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/empty"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/myheader_txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6dp"
                android:text="@string/empty"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/myheader_msg_flView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/view_23dp"
                    android:layout_height="@dimen/view_23dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_15dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:src="@mipmap/icon_my_msg" />

                <TextView
                    android:id="@+id/myheader_txt_msgNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:background="@drawable/my_msg_circular_bg"
                    android:gravity="center_horizontal"
                    android:text="@string/number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_8sp"
                    android:visibility="gone"/>
            </FrameLayout>

            <TextView
                android:id="@+id/myheader_txt_userManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_25dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_5dp"
                android:drawableRight="@mipmap/icon_my_rightwhite"
                android:gravity="center_vertical"
                android:text="@string/usermanager"
                android:textColor="@color/white"
                android:textSize="@dimen/size_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_80dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/my_header_balance_ll"
            style="@style/my_report_item_style"
            android:background="@drawable/linear_onclick_bg">

            <TextView
                android:id="@+id/myheader_txt_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textColor="@color/wecoo_theme_color"
                android:textSize="@dimen/size_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/my_balance"
                android:textColor="@color/wecoo_gray5"
                android:textSize="@dimen/size_13sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/view_65dp"
            android:background="@color/wecoo_gray2" />

        <LinearLayout
            android:id="@+id/my_header_reportrate_ll"
            style="@style/my_report_item_style"
            android:background="@drawable/linear_onclick_bg">

            <TextView
                android:id="@+id/myheader_txt_reportRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textColor="@color/wecoo_theme_color"
                android:textSize="@dimen/size_16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/my_reportRate"
                android:textColor="@color/wecoo_gray5"
                android:textSize="@dimen/size_13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/wecoo_gray1" />

    <LinearLayout
        android:id="@+id/my_header_report_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_50dp"
        android:background="@drawable/linear_onclick_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_15dp">

        <ImageView
            android:id="@+id/my_item_image"
            android:layout_width="@dimen/view_20dp"
            android:layout_height="@dimen/view_20dp"
            android:src="@mipmap/icon_my_report" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_weight="1"
            android:text="@string/my_report"
            android:textColor="@color/wecoo_gray6"
            android:textSize="@dimen/size_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_5dp"
            android:drawableRight="@mipmap/icon_my_rightgray"
            android:text="@string/all"
            android:textColor="@color/wecoo_gray5"
            android:textSize="@dimen/size_13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1dp"
        android:background="@color/wecoo_gray1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/myheader_ll_reportverifing"
            style="@style/my_report_item_style"
            android:background="@drawable/linear_onclick_bg">

            <TextView
                android:id="@+id/myheader_txt_reportverifing"
                style="@style/my_txt_style"
                android:text="@string/number"
                android:textColor="@color/wecoo_gray6"
                android:textSize="@dimen/size_15sp" />

            <TextView
                style="@style/my_txt_style"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/verifing" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myheader_ll_reportfollowuping"
            style="@style/my_report_item_style"
            android:background="@drawable/linear_onclick_bg">

            <TextView
                android:id="@+id/myheader_txt_reportfollowuping"
                style="@style/my_txt_style"
                android:text="@string/number"
                android:textColor="@color/wecoo_gray6"
                android:textSize="@dimen/size_15sp" />

            <TextView
                style="@style/my_txt_style"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/followuping" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myheader_ll_reportinspecting"
            style="@style/my_report_item_style"
            android:visibility="gone"
            android:background="@drawable/linear_onclick_bg">

            <TextView
                android:id="@+id/myheader_txt_reportinspecting"
                style="@style/my_txt_style"
                android:text="@string/number"
                android:textColor="@color/wecoo_gray6"
                android:textSize="@dimen/size_15sp" />

            <TextView
                style="@style/my_txt_style"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/inspecting" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myheader_ll_reportsigned"
            style="@style/my_report_item_style"
            android:background="@drawable/linear_onclick_bg">

            <TextView
                android:id="@+id/myheader_txt_reportsigned"
                style="@style/my_txt_style"
                android:text="@string/number"
                android:textColor="@color/wecoo_gray6"
                android:textSize="@dimen/size_15sp" />

            <TextView
                style="@style/my_txt_style"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/signed" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myheader_ll_reportreturned"
            style="@style/my_report_item_style"
            android:background="@drawable/linear_onclick_bg">

            <TextView
                android:id="@+id/myheader_txt_reportreturned"
                style="@style/my_txt_style"
                android:text="@string/number"
                android:textColor="@color/wecoo_gray6"
                android:textSize="@dimen/size_15sp" />

            <TextView
                style="@style/my_txt_style"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/returned" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/wecoo_gray1" />
</LinearLayout>
