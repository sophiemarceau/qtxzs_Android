<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/padding_15dp">

        <TextView
            android:id="@+id/rewardlist_item_txtTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_23dp"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/wecoo_gray6"
            android:textSize="@dimen/size_15sp" />

        <TextView
            android:id="@+id/rewardlist_item_txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/wecoo_gray4"
            android:textSize="@dimen/size_12sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="7dp"
        android:layout_height="16dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:src="@mipmap/icon_my_rightgray" />
</LinearLayout>
