<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_15dp"
    android:paddingTop="@dimen/padding_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/balancelist_item_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/wecoo_theme_color"
            android:textSize="@dimen/size_15sp" />

        <TextView
            android:id="@+id/balancelist_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/wecoo_gray4"
            android:textSize="@dimen/size_12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/balancelist_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:text=""
        android:textColor="@color/wecoo_gray6"
        android:textSize="@dimen/size_14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1dp"
        android:background="@color/wecoo_gray1"
        android:layout_marginTop="@dimen/margin_10dp"/>
</LinearLayout>
