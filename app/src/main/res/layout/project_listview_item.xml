<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_15dp">

        <com.wecoo.qutianxia.widget.RoundCornersImageView
            android:id="@+id/project_item_imageIcon"
            android:layout_width="@dimen/view_100dp"
            android:layout_height="@dimen/view_100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/default_picture_bg" />

        <View
            android:layout_width="@dimen/view_10dp"
            android:layout_height="@dimen/view_1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/project_item_txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="18"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/wecoo_gray6"
                android:textSize="@dimen/size_16sp" />

            <TextView
                android:id="@+id/project_item_txtdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/empty"
                android:textColor="@color/wecoo_gray4"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/project_item_txtIdentity"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/empty"
                android:textColor="@color/wecoo_gray5"
                android:textSize="@dimen/size_13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/project_item_txtNumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/wecoo_gray6"
                    android:textSize="@dimen/size_15sp" />

                <TextView
                    android:id="@+id/project_item_txtCounts"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/app_name"
                    android:textColor="@color/wecoo_gray6"
                    android:textSize="@dimen/size_13sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/project_item_txtNote"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_15dp"
        android:background="@mipmap/bg_money_reward_hot_new"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/padding_5dp"
        android:text="热门"
        android:textColor="@color/white"
        android:textSize="@dimen/size_12sp"
        android:visibility="gone" />
</FrameLayout>
