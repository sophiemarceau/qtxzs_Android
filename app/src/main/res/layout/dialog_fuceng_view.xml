<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dialog_fuceng_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_alpha_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blank_alpha_40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="@dimen/view_50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_fuceng_txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/size_18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="@dimen/margin_20dp"
                android:background="@color/white_alpha_50"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_fuceng_txtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:lineSpacingMultiplier="1.5"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_16sp"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_fuceng_imgClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="70dp"
            android:src="@mipmap/icon_close"/>
    </LinearLayout>
</LinearLayout>
