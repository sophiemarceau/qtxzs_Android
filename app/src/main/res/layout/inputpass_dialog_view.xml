<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:layout_width="@dimen/view_300dp"
        android:layout_height="@dimen/view_50dp"
        android:background="@drawable/linear_line_bg"
        android:gravity="center"
        android:text="提现密码"
        android:textColor="@color/wecoo_gray6"
        android:textSize="@dimen/size_18sp" />

    <TextView
        android:id="@+id/inputpass_txt_msg"
        android:layout_width="@dimen/view_300dp"
        android:layout_height="@dimen/view_50dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_15dp"
        android:text="为了您的资金安全，请输入提现密码"
        android:textColor="@color/wecoo_gray6"
        android:textSize="@dimen/size_14sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="@dimen/view_300dp"
        android:layout_height="@dimen/view_60dp"
        android:paddingLeft="@dimen/padding_20dp"
        android:paddingRight="@dimen/padding_20dp">

        <EditText
            android:id="@+id/inputpass_edit_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_40dp"
            android:layout_gravity="center"
            android:background="@drawable/screen_item_gray_bg"
            android:hint="请输入6位支付密码"
            android:maxLength="6"
            android:maxLines="1"
            android:inputType="numberPassword"
            android:paddingLeft="@dimen/padding_10dp"
            android:paddingRight="@dimen/padding_10dp"
            android:textColor="@color/wecoo_gray6"
            android:textColorHint="@color/wecoo_gray4"
            android:textSize="@dimen/size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/view_300dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:background="@drawable/linear_line_bg">

        <TextView
            android:id="@+id/inputpass_txt_resetPass"
            android:layout_width="@dimen/view_100dp"
            android:layout_height="@dimen/view_45dp"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/padding_15dp"
            android:text="忘记密码 > "
            android:textColor="@color/actionsheet_blue"
            android:textSize="@dimen/size_16sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/view_300dp"
        android:layout_height="@dimen/view_50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inputpass_txt_cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/btn_text_color"
            android:textSize="@dimen/size_16sp" />

        <View
            android:layout_width="@dimen/view_1dp"
            android:layout_height="@dimen/view_45dp"
            android:background="@color/wecoo_gray1" />

        <TextView
            android:id="@+id/inputpass_txt_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/wecoo_gray4"
            android:background="@color/wecoo_gray2"
            android:textSize="@dimen/size_16sp" />
    </LinearLayout>
</LinearLayout>

