<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_window_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_alpha_50"
    android:gravity="bottom"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_10dp"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/share_to_qrCode"
                android:layout_width="@dimen/view_80dp"
                android:layout_height="@dimen/view_110dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/view_53dp"
                    android:layout_height="@dimen/view_53dp"
                    android:src="@mipmap/icon_share_qrcode" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center"
                    android:text="@string/face_qrcode"
                    android:textColor="@color/wecoo_gray5"
                    android:textSize="@dimen/size_16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_wx_session"
                android:layout_width="@dimen/view_80dp"
                android:layout_height="@dimen/view_110dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/view_53dp"
                    android:layout_height="@dimen/view_53dp"
                    android:src="@mipmap/icon_share_weixin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center"
                    android:text="@string/share_wx"
                    android:textColor="@color/wecoo_gray5"
                    android:textSize="@dimen/size_16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_wxCircle"
                android:layout_width="@dimen/view_80dp"
                android:layout_height="@dimen/view_110dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/view_53dp"
                    android:layout_height="@dimen/view_53dp"
                    android:src="@mipmap/icon_share_pyq" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center"
                    android:text="@string/share_wxCircle"
                    android:textColor="@color/wecoo_gray5"
                    android:textSize="@dimen/size_16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_qq"
                android:layout_width="@dimen/view_80dp"
                android:layout_height="@dimen/view_110dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/view_53dp"
                    android:layout_height="@dimen/view_53dp"
                    android:src="@mipmap/icon_share_qq" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center"
                    android:text="@string/share_qq"
                    android:textColor="@color/wecoo_gray5"
                    android:textSize="@dimen/size_16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_qzone"
                android:layout_width="@dimen/view_80dp"
                android:layout_height="@dimen/view_110dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/view_53dp"
                    android:layout_height="@dimen/view_53dp"
                    android:src="@mipmap/icon_share_qzone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:gravity="center"
                    android:text="@string/share_qzone"
                    android:textColor="@color/wecoo_gray5"
                    android:textSize="@dimen/size_16sp" />

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_1dp"
        android:background="@color/wecoo_gray1"/>
    <TextView
        android:id="@+id/share_to_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/linear_onclick_bg"
        android:gravity="center"
        android:text="@string/cancelShare"
        android:textColor="@color/wecoo_gray5"
        android:textSize="@dimen/size_16sp" />
</LinearLayout>
