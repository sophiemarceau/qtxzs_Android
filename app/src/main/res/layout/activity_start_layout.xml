<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:contentDescription="@string/description"-->
    <!--android:src="@mipmap/start" />-->

    <ImageView
        android:id="@+id/start_img_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/start_txt_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin_10dp"
        android:background="@drawable/start_circular_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/empty"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/start_linear_View"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_65dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_10dp"
        android:visibility="gone">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/wecoo_gray5"
            android:textSize="@dimen/size_16sp" />

        <Button
            android:id="@+id/start_btn_tiaoguo"
            android:layout_width="@dimen/view_80dp"
            android:layout_height="30dp"
            android:background="@mipmap/btn_sendcode_gray"
            android:text="跳过"
            android:textColor="@color/wecoo_gray5"
            android:textSize="@dimen/size_15sp" />
    </LinearLayout>
</FrameLayout>
