<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_100dp"
        android:paddingTop="@dimen/view_50dp"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@mipmap/icon_invitation_no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:textSize="@dimen/size_15sp"
            android:text="@string/no_yqnum" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_15dp"
            android:gravity="center"
            android:background="@color/white">
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_1dp"
                android:layout_weight="1"
                android:background="@color/wecoo_gray3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16sp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:textColor="@color/wecoo_theme_color"
                android:text="邀请规则" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_1dp"
                android:layout_weight="1"
                android:background="@color/wecoo_gray3" />
        </LinearLayout>

        <WebView
            android:id="@+id/YQfoot_webView_rule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>
    </LinearLayout>
</LinearLayout>
