<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_onclick_bg"
    android:orientation="horizontal"
    android:padding="@dimen/padding_15dp">

    <LinearLayout
        android:id="@+id/report_item_llLookInfo"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/report_item_txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16sp" />

        <TextView
            android:id="@+id/report_item_txtContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:maxLines="2"
            android:text="@string/empty"
            android:textColor="@color/wecoo_gray5"
            android:textSize="@dimen/size_14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/report_item_txtLookProgress"
        android:layout_width="74dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/btn_report_lookprogress"
        android:gravity="center"
        android:padding="@dimen/margin_5dp"
        android:text="查看进度"
        android:textColor="@color/wecoo_gray5"
        android:textSize="@dimen/size_13sp" />
</LinearLayout>